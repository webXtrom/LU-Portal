<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transport"
    android:orientation="vertical"
    android:background="#CCA3B8"
    android:padding="20dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <ViewFlipper
                android:id="@+id/busSlidFlipper"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"

                />



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/routemaf"
                android:scaleType="centerCrop"
                android:layout_marginTop="15dp"
                />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/bus_schedule"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        >

        <TextView
            android:id="@+id/route1"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/custom_style"
            android:text="Route 1"
            android:textSize="30dp"
            android:gravity="center"
            android:padding="10dp"


            />

        <TextView
            android:id="@+id/route2"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/custom_style"
            android:text="Route 2"
            android:textSize="30dp"
            android:gravity="center"
            android:padding="10dp"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/route3"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/custom_style"
            android:text="Route 3"
            android:textSize="30dp"
            android:gravity="center"
            android:padding="10dp"

            />

        <TextView
            android:id="@+id/route4"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/custom_style"
            android:text="Route 4"
            android:textSize="30dp"
            android:gravity="center"
            android:padding="10dp"

            />

    </LinearLayout>

    <Button
        android:id="@+id/busUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bus up date"
        android:layout_marginTop="20dp"
        />

        </LinearLayout>
    </ScrollView>


</LinearLayout>