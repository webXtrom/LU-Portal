<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admission"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/white"
    >

    <Button
        android:id="@+id/admissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admission and Registration Policies"
        android:background="@drawable/three_color_curved"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/scholarshipAdmission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scholarship and Aid"
        android:background="@drawable/three_color_curved"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/tuitionFees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuition Fees"
        android:background="@drawable/three_color_curved"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/howToApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to Apply"
        android:background="@drawable/three_color_curved"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/academicPrograms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Academic Programs"
        android:background="@drawable/three_color_curved"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        />




</LinearLayout>